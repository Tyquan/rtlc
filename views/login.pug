extends layout

block content
  div(id="marg")
  h1 Login Page
    form(action="/auth/login", method="post" class="form")
        div(class="form-group")
            label Email
            input(type="email", name="username")
            br
        div(class="form-group")
            label Password
            input(type="password", name="password")
            br
        div(class="form-group")
            input(type="submit", value="Submit")