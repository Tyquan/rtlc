extends ../../layout

block content
  div(id="adminBg")
    include ../nav.pug
    div(class="container")
      div(class="row")
        div(class="col-xs-12")
          h1(class="text-center") Contacts
      br
      a(href="/admin/createuser") Create A Contact
      br
      br
      div("table-responsive")
        table(class="table table-bordered table-striped table-hover table-condensed")
          tr
            th Role
            th Title
            th Email
          each user in users
            tr
              td= user.role
              td
                a(href="/admin/showuser/" + user.id)= user.name
              td= user.username