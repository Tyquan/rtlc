extends ../layout

block content
  div(id="servicebody")
    div(id="splash2")
      h1(class="text-center") Marketing & Branding Services
  div(id="marg")
  div(class="container")
    div(class="row")
      if (services.length > 0)
        each service in services
          div(id="col-sm-6")
            div(class="card")
              img(src=service.imageUrl id="serviceImage")
              div(class="card-body")
                h3(class="card-title")=service.title
                p(class="card-body")=service.description
      else
        h1(class="text-center") No Services Added Yet
  div(id="marg")