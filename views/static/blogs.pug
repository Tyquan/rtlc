extends ../layout

block content
  div(id="content-container")
    div(class="row")
      if (blogs.length > 0)
        each blog in blogs
          div(class="col-md-3")
            a(href="/static/showblog/" + blog.id)
              center
                img(src=blog.imageUrl class="img-responsive")
              h3(class="text-center" id="text")= blog.title
              p(class="text-center")
                small= blog.category
      else
        h1(class="text-center") No Blogs Added Yet